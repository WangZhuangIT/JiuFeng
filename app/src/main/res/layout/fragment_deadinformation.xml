<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dead_information_image_photo"
        android:layout_width="55dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_head" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dead_information_image_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/dead_text_name1"
            android:layout_width="0dip"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@color/colorLightGray"/>

        <Button
            android:id="@+id/dead_text_name2"
            android:layout_width="0dip"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@color/colorLightGray"
            android:layout_weight="1"/>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/dead_viewPager_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll"></android.support.v4.view.ViewPager>

</RelativeLayout>