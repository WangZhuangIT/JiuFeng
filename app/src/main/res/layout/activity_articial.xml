<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lingzhuo.jiufeng.activity.ArticialActivity">

    <com.lingzhuo.jiufeng.view.MsgTitleView
        android:id="@+id/msgTitleView_articial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.lingzhuo.jiufeng.view.MsgTitleView>

    <TextView
        android:id="@+id/text_articial_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/msgTitleView_articial"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/text_articial_detial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_articial_title"
        android:textColor="#000000"
        android:textSize="8sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

    <WebView
        android:id="@+id/webView_articial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/text_articial_detial"></WebView>

</RelativeLayout>
