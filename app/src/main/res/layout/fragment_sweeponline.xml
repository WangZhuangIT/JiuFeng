<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/tos" />

    <ImageView
        android:id="@+id/dead_image_photo"
        android:layout_width="55dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_head" />

    <ImageView
        android:id="@+id/dead_image_flower"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_below="@id/dead_image_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ImageView
        android:id="@+id/dead_image_sweep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/worship" />

    <ImageView
        android:id="@+id/dead_image_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@mipmap/music" />

    <ImageView
        android:id="@+id/dead_image_xiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dead_image_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/dead_image_wine"
        android:layout_width="155dp"
        android:layout_height="56dp"
        android:layout_below="@id/dead_image_photo"
        android:layout_marginTop="78dp"
        android:scaleType="fitEnd" />

    <ImageView
        android:id="@+id/dead_image_wine2"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dead_image_photo"
        android:layout_marginTop="78dp"
        android:scaleType="fitStart" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/dead_image_photo">

        <TextView
            android:id="@+id/dead_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGold"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dead_text_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorGold"
            android:layout_gravity="center_horizontal"
            android:textSize="8sp" />
    </LinearLayout>

</RelativeLayout>