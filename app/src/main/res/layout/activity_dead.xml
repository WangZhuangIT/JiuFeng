<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lingzhuo.jiufeng.activity.DeadActivity"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablelayout_dead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tab:tabIndicatorColor="@color/colorAccent"
        tab:tabIndicatorHeight="1dp"
        android:background="@color/colorGray"
        tab:tabSelectedTextColor="@color/colorAccent" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_dead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
